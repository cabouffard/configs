# ############################## #
#       MacOS Aliases
# ############################## #

if [[ "$OSTYPE" == "darwin"* ]]; then
    # Ruby
    alias rclean="rdd && rdc && rdm && rds"

    # General
    alias svim="source ~/.vimrc"
    alias szsh="source ~/.zshrc"
    alias salias="source ~/.aliases"
    alias evim="$EDITOR ~/.vimrc"
    alias ezsh="$EDITOR ~/.zshrc"
    alias ealias="$EDITOR ~/.aliases"
    alias etodo="$EDITOR ~/notes/todo.md"
    alias todo="etodo"
    alias etmp="$EDITOR ~/notes/scratch.md"
    alias vim="mvim -v"
    alias v="vim"
    alias y="youtube-dl"
    alias please='sudo $(fc -ln -1)'
    alias getip="curl -s http://wtfismyip.com/text"
    alias myip="getip"
    alias p3="python3"

    # Directory Navigation
    alias dl="cd ~/Downloads"
    alias dk="cd ~/Desktop"
    alias doc="cd ~/Documents"
    alias config="cd ~/src/configs"

    # Stuff
    alias dud='du -d 1 -h'
    alias duf='du -sh *'

    # Brew
    alias brewn="HOMEBREW_NO_AUTO_UPDATE=1 brew"

    # dir stack
    alias dh='dirs -v'

    # Other navigation stuff
    alias ..='cd ..'
    alias ...='cd ../..'

    # Work stuff
    alias dwssh="ssh -i ~/.ssh/id_rsa cab@ec2-54-226-247-245.compute-1.amazonaws.com"
    alias dwdb='psql -h cruncher-test.csi15pteagfe.us-east-1.redshift.amazonaws.com -U crunchermaster -d cruncher_production -p 5439'
    alias dwpair="dwssh; sudo su-; sudo t-money; tmux attach-session -t shared"
fi
