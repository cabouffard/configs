[github]
    user = cabouffard
[user]
    email = cabouffard@gmail.com
    name = Charles-Andre Bouffard
    signingkey = 5FC2DB34186B3D32
[push]
    default = simple
    followTags = true
[pull]
    rebase = true
[branch]
    autosetuprebase = always
[core]
    autocrlf = false
    excludesfile = ~/.gitignore
    pager = less --raw-control-chars
[color]
    ui = true
[format]
    pretty = format:%C(blue)%ad%Creset %C(yellow)%h%C(green)%d%Creset %C(blue)%s %C(magenta) [%an]%Creset
[hub]
    protocol = https
[commit]
    template = ~/.git_commit_msg.txt
    gpgsign = true
[merge]
    tool = vimdiff3
    ff = true
    conflictstyle = diff3
[mergetool "vimdiff3"]
    cmd = vim -f -d \"$LOCAL\" \"$MERGED\" \"$REMOTE\"
[status]
    showUntrackedFiles = all
